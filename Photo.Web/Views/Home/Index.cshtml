@model IEnumerable<Photo.Web.Models.Page>
@{
    ViewBag.Title = "首页";
}
@if (Model != null)
{
    foreach (var page in Model)
    {
        @*Title*@
        <div class="clearfix">
            <div class="mateRight">
                <h2 style="margin:0;">
                    <a href="#">@page.Title</a>
                </h2>
                <p>Tags:tag1，tag2，tag3</p>
            </div>
            <div class="mateLeft">
                <div class="day">
                    @DateTime.Now.Day
                </div>
                <div class="month_Year">
                    @DateTime.Now.Month&nbsp;@DateTime.Now.Year
                </div>
            </div>
        </div>

        @*Image*@
        <div class="postContent">
            @if (page != null && page.DefaultImg != null)
            {
                string style = string.Format("width:{0}px;height:{1}px;", page.DefaultImg.DisplayWidth, page.DefaultImg.DisplayHeight);
            <a href="#" style="@style">
                <img alt="" style="width:100%; height:100%;" src="~/imgs/@page.DefaultImg.Path.Replace(" \\", "//")" />
            </a>
            }
        </div>
    
        <div class="postLine"></div>
    }
}
