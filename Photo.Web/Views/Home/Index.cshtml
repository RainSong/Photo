@model IEnumerable<Photo.Web.Models.Page>
@{
    ViewBag.Title = "首页";
}
<div>
    @if (Model != null)
    {
        foreach (var page in Model)
        {
            @*Title*@
            <div class="clearfix">
                <div class="mateRight">
                    <h2 style="margin:0;">
                        <a href="#" style=" text-decoration:none; color:#333; font-family:微软雅黑,Arial, Helvetica, sans-serif;font-size:14px;">@page.Title</a>
                    </h2>
                    <p style=" margin:0;font-family:微软雅黑,Arial, Helvetica, sans-serif;font-size:14px; color:#666;">Tags:tag1，tag2，tag3</p>
                </div>
                <div class="mateLeft">
                    <div class="day">
                        @DateTime.Now.Day
                    </div>
                    <div class="month_Year">
                        @DateTime.Now.Month&nbsp;@DateTime.Now.Year
                    </div>
                </div>
            </div>
            
            @*Image*@
            <div style=" width:635px;">
                @if (page != null && page.DefaultImg != null)
                {
                    string style = string.Format("width:{0}px;height:{1}px;", page.DefaultImg.DisplayWidth, page.DefaultImg.DisplayHeight);
                    <a href="#" style="@style">
                        <img alt="" style="width:100%; height:100%;" src="~/imgs/@page.DefaultImg.Path.Replace(" \\", "//")" />
                    </a>
                }
            </div>
        }
    }
</div>
